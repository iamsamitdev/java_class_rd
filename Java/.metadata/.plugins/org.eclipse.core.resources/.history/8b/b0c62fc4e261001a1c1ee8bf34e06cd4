package com.itgenius;

import java.util.Scanner;

public class JavaScanner {
	
	// การสร้างคุณสมบัติเก็บไว้ใช้งาน
	private static Scanner num1;

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// Class สำหรับรับข้อมูล
//		Scanner input = new Scanner(System.in);
//		System.out.print("ป้อนชื่อของคุณ : ");
//		String data = input.nextLine();
//		System.out.println("สวัสดี "+ data);
		sumdata();
	}
	
	public static void sumdata() {
		num1 = new Scanner(System.in);
		System.out.print("ป้อนข้อมูลที่ 1: ");
		int data1 = num1.nextInt();
		
		Scanner num2 = new Scanner(System.in);
		System.out.print("ป้อนข้อมูลที่ 2: ");
		int data2 = num2.nextInt();
		
		int total = data1 + data2;
		System.out.println("ผลรวม = "+ total);
	}

}
