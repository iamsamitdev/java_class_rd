package com.itgenius;

import java.io.BufferedWriter;
import java.io.FileWriter;

public class WriteFile {

	public static void main(String[] args) {
		// การเขียนคำสั่งอ่าน path ปัจจบัน
		String current_path = System.getProperty("user.dir");
		
		try {
			// คำสั่งในการเขียนข้อมูลลงใน file
			BufferedWriter out = new BufferedWriter(new FileWriter(current_path+"/datafile/data.txt"));
			out.write("Samit Koyom");
			out.write("IT Genius Engineering");
			out.write("สถาบันไอทีจีเนียส");
			out.close();
			System.out.println("Write file success");
		}catch (Exception e) {
			// System.out.println("มีข้อผิดพลาดในโปรแกรม");
			e.printStackTrace();
		}

	}

}
